# EditorConfig configuration for consistent coding styles
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false

[*.{js,json}]
indent_size = 2

[Makefile]
indent_style = tab

[{*.py,*.pyi}]
max_line_length = 88
